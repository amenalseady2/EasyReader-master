    </style>


    <style name="RatingBar_big" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/discovery_ratingbar_big</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">29dip</item>
        <item name="android:maxWidth">40dip</item>
        <item name="android:minWidth">44dip</item>
        <item name="android:max">5</item>
        <item name="android:rating">0</item>
        <!--name="dividerWidth"-->
        <item name="android:progress">5</item>
        <item name="android:numStars">0</item>
        <item name="android:stepSize">1</item>
        <item name="android:isIndicator">false</item>
    </style>


    <style name="MyDialogDelect" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/tran</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style parent="android:Theme.Dialog" name="AnimBottom">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
