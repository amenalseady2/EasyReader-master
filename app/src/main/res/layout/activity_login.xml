<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context="com.BlackDiamond2010.hzs.ui.activity.lives.activity.LoginActivity">

    <include layout="@layout/top_view" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@mipmap/luyan_logo" />

    <EditText
        android:id="@+id/et_name"
        android:singleLine="true"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="57dp"
        android:background="@null"
        android:drawableLeft="@mipmap/shouji"
        android:drawablePadding="30dp"
        android:hint="11位手机号"
        android:paddingBottom="6dp"
        android:textColor="@color/text_333"
        android:textColorHint="@color/text_999"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/et_name"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/div_line" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:singleLine="true"
        android:inputType="textPassword"
        android:drawableLeft="@mipmap/mima"
        android:drawablePadding="30dp"
        android:hint="密码（6-16数字和字母组成）"
        android:paddingBottom="6dp"
        android:textColor="@color/text_333"
        android:textColorHint="@color/text_999"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/et_password"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/div_line" />

    <RelativeLayout
        android:id="@+id/rl_mima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="25dp">

        <CheckBox
            android:id="@+id/tv_agree"
            style="@style/TextStyle_14_black"
            android:drawablePadding="8dp"
            android:checked="false"
            android:button="@drawable/xieyi_btn"
            android:text="记住密码"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/forgetpassword"
            style="@style/TextStyle_14_black"
            android:layout_alignParentRight="true"
            android:text="忘记密码?"
            android:textColor="#f37505" />
    </RelativeLayout>

    <TextView
        android:id="@+id/login"
        style="@style/TextStyle_14_black"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/rl_mima"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="30dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/colorWhite" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fangshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="其他方式登录"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_666"
                android:textSize="14sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toLeftOf="@+id/fangshi"
               android:layout_centerVertical="true"
                android:background="@color/div_line" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_toRightOf="@+id/fangshi"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@color/div_line" />

        </RelativeLayout>

        <!--<LinearLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/div_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="其他方式登录"
                android:textColor="@color/text_666"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/div_line" />
        </LinearLayout>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            >
                <ImageView
                    android:id="@+id/weichat"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weichart" />



                <ImageView
                    android:id="@+id/qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                   android:layout_margin="30dp"
                    android:src="@mipmap/qq" />


                <ImageView
                    android:layout_toRightOf="@+id/qq"
                    android:id="@+id/wb"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weibo" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
