<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.BlackDiamond2010.hzs.ui.activity.lives.activity.EvaluateActivity">

  <include layout="@layout/top_view"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/goodsimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/test" />

        <TextView
            android:id="@+id/goodsname"
            style="@style/TextStyle_14_black"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/goodsimg"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="路演工具路演工具路演工具路演工具路演工具路演工具" />

        <TextView
            android:id="@+id/goodsprice"
            style="@style/TextStyle_14_black"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/goodsimg"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="￥268" />


    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/main_backgroud_color"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:id="@+id/pingfen"
            style="@style/TextStyle_14_black"
            android:padding="15dp"
            android:text="服务评分" />

        <RatingBar
            android:id="@+id/ratingbar"
            style="@style/RatingBar_big"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/pingfen"
            android:rating="0" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/div_line"/>

    <EditText
        android:id="@+id/tvcontent"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:padding="15dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:textColorHint="#b3b3b3"
        android:gravity="left"
        android:hint="写下购买体会，帮助其他小伙伴"
        android:background="#ffffff"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/main_backgroud_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="15dp"
        android:orientation="vertical">
        <TextView
            style="@style/TextStyle_14_black"
            android:paddingBottom="15dp"
            android:text="晒照"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/pingjia_img"
                android:layout_width="75dp"
                android:background="@drawable/paizhao"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/photo_icon"/>
            <LinearLayout
                android:id="@+id/ll_image"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="100dp"></LinearLayout>
        </RelativeLayout>


        <!--<RelativeLayout
            android:layout_width="75dp"
            android:background="@drawable/paizhao"
            android:layout_height="75dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/zhaopian_dingdan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_centerHorizontal="true"
                android:textSize="10dp"
                android:text="最多六张"
                android:textColor="@color/text_999"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/zhaopian_dingdan"/>
        </RelativeLayout>-->

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f3f3f3">

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/red"
            android:gravity="center"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="14dp" />


    </RelativeLayout>


</LinearLayout>
