<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context="com.BlackDiamond2010.hzs.ui.activity.lives.activity.LoginActivity">

    <include
        android:id="@+id/top"
        layout="@layout/top_view" />


    <EditText
        android:id="@+id/et_newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"

        android:layout_marginRight="48dp"
        android:inputType="textPassword"
        android:layout_marginTop="151dp"
        android:layout_toLeftOf="@+id/getcheck"
        android:background="@null"
        android:singleLine="true"
        android:drawableLeft="@mipmap/mima"
        android:drawablePadding="30dp"
        android:hint="密码（6-16数字和字母组成）"
        android:paddingBottom="6dp"
        android:textColor="@color/text_333"
        android:textColorHint="@color/text_999"
        android:textSize="14dp"
        android:layout_alignTop="@+id/getcheck" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/et_newpassword"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/div_line" />

    <EditText
        android:id="@+id/et_surepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_newpassword"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"
        android:background="@null"
        android:drawableLeft="@mipmap/mima"
        android:drawablePadding="30dp"
        android:hint="确认密码（需要同密码一致）"
        android:paddingBottom="6dp"
        android:textColor="@color/text_333"
        android:textColorHint="@color/text_999"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/et_surepassword"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/div_line" />




    <TextView
        android:id="@+id/submit"
        style="@style/TextStyle_14_black"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/et_surepassword"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="89dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffff" />




</RelativeLayout>
