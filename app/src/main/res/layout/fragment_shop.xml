<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/main_backgroud_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/home_viewpager_rela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.BlackDiamond2010.hzs.view.AutoScrollViewPager
                    android:id="@+id/goods_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </com.BlackDiamond2010.hzs.view.AutoScrollViewPager>

                <LinearLayout
                    android:id="@+id/ll_zhishiqi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal" >
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:background="@color/colorWhite"
                android:paddingTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/newgoods"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/xinpintuijian_shangcheng"
                    android:drawablePadding="8dp"
                    android:gravity="center_horizontal"
                    android:text="新品推荐"
                    android:textSize="12dp"
                    android:textColor="@color/text_666"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_tool"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/gongju_shangcheng"
                    android:drawablePadding="8dp"
                    android:gravity="center_horizontal"
                    android:text="路演工具"
                    android:textSize="12dp"
                    android:textColor="@color/text_666"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/wenchuangshangp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/shangping_shangcheng"
                    android:drawablePadding="8dp"
                    android:gravity="center_horizontal"
                    android:text="文创商品"
                    android:textSize="12dp"
                    android:textColor="@color/text_666"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/all"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/quanbu_shangcheng"
                    android:drawablePadding="8dp"
                    android:gravity="center_horizontal"
                    android:text="查看全部"
                    android:textSize="12dp"
                    android:textColor="@color/text_666"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="217dp"
                android:paddingLeft="3dp"
                android:background="#f3f3f3"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/frist_rl"
                    android:background="#ffffff"
                    android:layout_width="0dp"
                    android:layout_weight="300"
                    android:layout_marginRight="3dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/title1"
                        android:padding="15dp"
                        android:textSize="15dp"
                        android:textColor="#22B1FE"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/price1"
                        android:paddingLeft="15dp"
                        android:textColor="#333333"
                        android:textSize="12dp"
                        android:layout_below="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="124dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        android:scaleType="centerInside"
                        android:layout_centerHorizontal="true"
                        android:layout_height="124dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="444"
                    android:layout_marginRight="3dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/second_rl"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="180"
                        android:background="#ffffff"
                        android:layout_marginBottom="3dp">

                        <TextView
                            android:textColor="#BC45D1"
                            android:id="@+id/title2"
                            android:padding="15dp"
                            android:textSize="15dp"
                            android:maxLength="5"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_below="@+id/title2"
                            android:id="@+id/price2"
                            android:textSize="12dp"
                            android:paddingLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="25dp"

                            android:scaleType="centerInside"
                            android:layout_height="60dp" />

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="248"
                        android:orientation="horizontal"
                        >


                        <RelativeLayout
                            android:id="@+id/three_rl"
                            android:layout_width="0dp"
                            android:layout_weight="100"
                            android:background="#ffffff"
                            android:layout_marginRight="3dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:textColor="#ED7057"
                                android:id="@+id/title3"
                                android:padding="15dp"
                                android:textSize="15dp"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="60dp"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="15dp"
                                android:scaleType="centerInside"
                                android:layout_marginRight="25dp"
                                android:layout_height="60dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/four_rl"
                            android:layout_width="0dp"
                            android:background="#ffffff"
                            android:layout_height="match_parent"
                            android:layout_weight="100">
                            <TextView
                                android:textColor="#1BDA74"
                                android:id="@+id/title4"
                                android:padding="15dp"
                                android:textSize="15dp"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="60dp"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="15dp"
                                android:layout_marginRight="25dp"
                                android:scaleType="centerInside"
                                android:layout_height="60dp" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/tv_luyan"
                        android:layout_centerVertical="true"
                        android:background="@color/blue"/>
                    <TextView
                        android:id="@+id/tv_luyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:drawablePadding="5dp"
                        android:textSize="15dp"

                        android:textColor="@color/blue"
                        android:drawableLeft="@mipmap/fushi_shangcheng"
                        android:text="路演工具"/>
                    <View
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_luyan"
                        android:layout_centerVertical="true"
                        android:background="@color/blue"/>


                    <TextView
                        android:id="@+id/tv_luyanmore"
                        style="@style/TextStyle_12_999"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@mipmap/go"
                        android:text="更多" />
                </RelativeLayout>



                <ImageView
                    android:id="@+id/luyao_bigimg"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    />

                <LinearLayout
                    android:id="@+id/head_hothome_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:overScrollMode="never"
                        android:paddingLeft="10dp"
                        android:scrollbars="none" />
                    <!--</com.icaomei.user.widget.DZPullNavLayout>-->
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/tv_goods"
                        android:layout_centerVertical="true"
                        android:background="#d3b342"/>
                    <TextView
                        android:id="@+id/tv_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:drawablePadding="5dp"
                        android:textColor="#d3b342"
                        android:textSize="15dp"
                        android:drawableLeft="@mipmap/liping_shangcheng"
                        android:text="文创商品"/>
                    <View
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_goods"
                        android:layout_centerVertical="true"
                        android:background="#d3b342"/>
                    <TextView
                        android:id="@+id/tv_wenchuangmore"
                        style="@style/TextStyle_12_999"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@mipmap/go"
                        android:text="更多" />
                </RelativeLayout>



                <ImageView
                    android:id="@+id/wenchuang_bigimg"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:id="@+id/ll_goods"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:visibility="visible"
                    android:orientation="horizontal">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/wenchuanggoods_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:background="@color/colorWhite"
                        android:paddingLeft="10dp"
                        android:scrollbars="none"/>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/ll_ilike">



                <RelativeLayout
                    android:background="#ffffff"
                    android:id="@+id/rl_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/tv_xihuan"
                        android:layout_centerVertical="true"
                        android:background="#e78aea"/>
                    <TextView
                        android:id="@+id/tv_xihuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:drawablePadding="5dp"
                        android:textSize="15dp"
                        android:textColor="#e78aea"
                        android:drawableLeft="@mipmap/xihuan_shangcheng"
                        android:text="猜你喜欢"/>
                    <View
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tv_xihuan"
                        android:layout_centerVertical="true"
                        android:background="#e78aea"/>


                    <TextView
                        android:id="@+id/xihuan_change"
                        style="@style/TextStyle_12_999"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@mipmap/change_icon"
                        android:drawablePadding="5dp"
                        android:visibility="gone"
                        android:text="换一换" />
                </RelativeLayout>



                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/rl_like"
                    android:id="@+id/recyclerview_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="10dp"
                    android:scrollbars="none"/>
            </RelativeLayout>

            <!--<LinearLayout
                android:id="@+id/ll_ilike"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:visibility="visible"
             android:orientation="vertical" >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scrollbars="none"/>
            </LinearLayout>-->


        </LinearLayout>
    </ScrollView>
</LinearLayout>
