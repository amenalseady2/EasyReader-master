<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"

    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="15dp"
    android:background="#ffffff"
    tools:context="com.BlackDiamond2010.hzs.ui.activity.lives.activity.RecordActivity">


    <TextView
        android:id="@+id/orderid"
        style="@style/TextStyle_13_666"
        android:paddingBottom="14dp"
        android:paddingRight="15dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/time"
        style="@style/TextStyle_10_999"
        android:layout_alignParentRight="true"
        android:paddingBottom="14dp"

        />

    <TextView
        android:id="@+id/title"
        style="@style/TextStyle_14_black"
        android:layout_below="@+id/orderid"
        android:paddingBottom="14dp"
        android:paddingRight="14dp"
        android:text="季度钻石会员" />

    <TextView
        android:id="@+id/price"
        style="@style/TextStyle_14_black"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/orderid"
        android:paddingBottom="14dp"
        android:paddingRight="4dp"
        />

    <TextView
        android:id="@+id/limit"
        style="@style/TextStyle_14_999"
        android:paddingRight="14dp"

        android:layout_below="@+id/title"
        android:layout_alignParentStart="true" />

    <View
        android:layout_below="@+id/limit"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/div_line" />
</RelativeLayout>
