<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


        <include
            android:id="@+id/top"
            layout="@layout/top_view" />

        <ScrollView
            android:layout_below="@+id/top"
            android:layout_above="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/vip_shuom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/vip_shiyongshuoming" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#ffffff">

                    <com.BlackDiamond2010.hzs.view.CircleImageView
                        android:id="@+id/userhead"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/test" />

                    <TextView
                        android:id="@+id/username"
                        style="@style/TextStyle_13_black"
                        android:layout_toRightOf="@+id/userhead"
                        android:paddingTop="10dp"
                        android:text="大王叫我来嫖娼" />

                    <TextView
                        android:id="@+id/isvip"
                        style="@style/TextStyle_12_black"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/userhead"
                        android:paddingBottom="10dp"
                        android:text="您还不是vip会员"
                        android:textColor="@color/red" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:background="#f3f3f3"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:text="会员特权"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingBottom="9dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="7dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_marginRight="9dp"

                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/vip_luyanbingfa"/>
                        <TextView
                            android:visibility="gone"
                            style="@style/TextStyle_13_black"
                            android:text="路演兵法"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorWhite"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/vip_luyanyingxiong"/>
                        <TextView
                            style="@style/TextStyle_13_black"
                            android:text="路演英雄"
                            android:visibility="gone"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorWhite"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/vip_shalong"/>
                        <TextView
                            android:visibility="gone"
                            style="@style/TextStyle_13_black"
                            android:text="钻石沙龙"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorWhite"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:paddingBottom="7dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/vip_zhibo"/>
                        <TextView
                            android:visibility="gone"
                            style="@style/TextStyle_13_black"
                            android:text="钻石大咖\n在线直播"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorWhite"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/vip_zhekou"/>
                        <TextView
                            style="@style/TextStyle_13_black"
                            android:text="商城会员折扣"
                            android:visibility="gone"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorWhite"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/vip_gaunmo"/>
                        <TextView
                            style="@style/TextStyle_13_black"
                            android:text="线下活动观摩"
                            android:visibility="gone"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorWhite"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/div_line" />

                <RelativeLayout
                    android:id="@+id/rl_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp">

                    <ImageView
                        android:id="@+id/year_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="17dp"
                        android:paddingTop="17dp"
                        android:src="@mipmap/choice_normal" />

                    <TextView
                        style="@style/TextStyle_14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/year_icon"
                        android:drawableLeft="@mipmap/vip_zuanshi"
                        android:drawablePadding="14dp"
                        android:text="年度钻石会员" />

                    <TextView
                        style="@style/TextStyle_14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="328元"
                        android:textColor="@color/red" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/div_line" />

                <RelativeLayout
                    android:id="@+id/rl_liu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp">

                    <ImageView
                        android:id="@+id/liu_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="17dp"
                        android:paddingTop="17dp"
                        android:src="@mipmap/choice_normal" />

                    <TextView
                        style="@style/TextStyle_14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/liu_icon"
                        android:drawableLeft="@mipmap/vip_zuanshi"
                        android:drawablePadding="14dp"
                        android:text="6个月钻石会员" />

                    <TextView
                        style="@style/TextStyle_14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="188元"
                        android:textColor="@color/red" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/div_line" />

                <RelativeLayout
                    android:id="@+id/rl_jidu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp">

                    <ImageView
                        android:id="@+id/jidu_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="17dp"
                        android:paddingTop="17dp"
                        android:src="@mipmap/choice_normal" />

                    <TextView
                        style="@style/TextStyle_14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/jidu_icon"
                        android:drawableLeft="@mipmap/vip_zuanshi"
                        android:drawablePadding="14dp"
                        android:text="季度钻石会员" />

                    <TextView
                        style="@style/TextStyle_14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="98元"
                        android:textColor="@color/red" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/div_line" />

            </LinearLayout>
        </ScrollView>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="14dp" />

</RelativeLayout>
