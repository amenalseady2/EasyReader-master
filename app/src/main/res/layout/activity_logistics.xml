<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.BlackDiamond2010.hzs.ui.activity.lives.activity.LogisticsActivity">

    <include layout="@layout/top_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/goodsimg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/test" />

            <TextView
                android:id="@+id/status"
                style="@style/TextStyle_12_666"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/goodsimg"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="配送中" />

            <TextView
                android:id="@+id/phone"
                style="@style/TextStyle_12_666"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/goodsimg"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="18888888888" />

            <TextView
                android:id="@+id/orderid"
                style="@style/TextStyle_12_666"
                android:layout_below="@+id/status"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/goodsimg"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="订单号：85695544555" />

            <TextView
                android:id="@+id/company_name"
                style="@style/TextStyle_12_666"
                android:layout_above="@+id/phone"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/goodsimg"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="圆通快递" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/main_backgroud_color"/>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/colorWhite"
            android:divider="#ffffff"
            android:dividerHeight="0dp" />

    </LinearLayout>


</LinearLayout>
