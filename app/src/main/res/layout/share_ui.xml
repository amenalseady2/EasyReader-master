<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/share_root"
    android:background="#77000000"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <TextView
            android:id="@+id/fangshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="分享至"
            android:textColor="@color/text_666"
            android:textSize="14sp" />


        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fangshi"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/weichat"
                    style="@style/TextStyle_12_666"
                    android:layout_centerInParent="true"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/weichart"
                    android:gravity="center_horizontal"
                    android:text="微信" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/weichat_friend"
                    style="@style/TextStyle_12_666"
                    android:layout_centerInParent="true"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/weichar_friend"
                    android:gravity="center_horizontal"
                    android:text="朋友圈" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sina"
                    style="@style/TextStyle_12_666"
                  android:layout_centerInParent="true"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/share_sina"
                    android:gravity="center_horizontal"
                    android:text="新浪微博" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/qq"
                    style="@style/TextStyle_12_666"
                    android:layout_centerInParent="true"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/share_qq"
                    android:gravity="center_horizontal"
                    android:text="QQ好友" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ll_share"
            android:layout_marginTop="25dp"
            android:background="@color/div_line" />

        <TextView
            android:id="@+id/cancle"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/div"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_666"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>
