<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.BlackDiamond2010.hzs.ui.activity.lives.activity.AddressEditActivity">

    <include layout="@layout/top_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            style="@style/TextStyle_14_black"
            android:padding="15dp"
            android:text="收货人" />

        <EditText
            android:id="@+id/name"
            style="@style/TextStyle_14_black"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:background="@null"
            android:hint="请输入收货人姓名"
            android:textColorHint="@color/text_999"

            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/div_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextStyle_14_black"
            android:padding="15dp"
            android:text="手机号码"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:background="@null"
            android:id="@+id/phone"
            android:inputType="phone"
            style="@style/TextStyle_14_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:textColorHint="@color/text_999"
            android:layout_width="match_parent"
            android:hint="请输入收货人手机号码"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/div_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            style="@style/TextStyle_14_black"
            android:padding="15dp"
            android:text="所在地区" />

        <TextView
            android:id="@+id/address"
            style="@style/TextStyle_14_black"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:background="@null"
            android:hint="选择所在地"
            android:textColorHint="@color/text_999"

            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/div_line"/>

    <EditText
        android:background="#ffffff"
        android:id="@+id/address_detail"
        style="@style/TextStyle_14_black"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:gravity="left"
        android:layout_height="110dp"
        android:textColorHint="@color/text_999"
        android:layout_width="match_parent"
        android:hint="请填写详细信息"


        />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:button="@drawable/shopcart_check"
        android:layout_margin="15dp"
        android:text="设为默认地址"
        android:paddingLeft="5dp"
        android:checked="true"
        android:textColor="@color/text_333"
        android:layout_height="wrap_content" />
</LinearLayout>
