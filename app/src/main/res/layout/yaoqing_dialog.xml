<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_cont"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <ImageView
            android:id="@+id/erwema"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="45dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ssss" />

        <TextView
            style="@style/TextStyle_13_black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="55dp"
            android:text="给好友扫码下载路演大侠App" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp">

                <TextView
                    android:id="@+id/fangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="分享至"
                    android:textColor="@color/text_666"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/fangshi"
                    android:background="@color/div_line" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/fangshi"
                    android:layout_weight="1"
                    android:background="@color/div_line" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/weichat"
                    style="@style/TextStyle_12_666"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/qq"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/weichart"
                    android:gravity="center_horizontal"
                    android:text="微信" />


                <TextView
                    android:id="@+id/qq"
                    style="@style/TextStyle_12_666"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/qq"
                    android:gravity="center"
                    android:text="qq" />


                <TextView
                    android:id="@+id/weibo"
                    style="@style/TextStyle_12_666"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/qq"
                    android:drawablePadding="7dp"
                    android:drawableTop="@mipmap/weibo"
                    android:gravity="center"
                    android:text="微博" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>