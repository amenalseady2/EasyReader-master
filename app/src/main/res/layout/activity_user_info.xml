<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    tools:context="com.BlackDiamond2010.hzs.ui.activity.lives.activity.UserInfoActivity">
    <include layout="@layout/top_view"/>


    <RelativeLayout
        android:id="@+id/rl_head"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <TextView
            style="@style/TextStyle_14_black"
            android:text="头像"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_changehead_ion"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/go"/>
        <com.BlackDiamond2010.hzs.view.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/iv_changehead_ion"
            android:layout_centerVertical="true"
            android:src="@mipmap/myuserhead"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/div_line"/>


    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TextStyle_14_black"
            android:text="用户名"
            android:id="@+id/user_n"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_toRightOf="@+id/user_n"
            android:id="@+id/tv_username"
            style="@style/TextStyle_14_black"
            android:gravity="right"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/div_line"/>
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TextStyle_14_black"
            android:text="手机号码"
            android:id="@+id/phone"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@+id/phone"
            android:id="@+id/tv_phonenum"
            style="@style/TextStyle_14_black"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/div_line"/>
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TextStyle_14_black"
            android:text="姓名"
            android:id="@+id/name"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_toRightOf="@+id/name"
            android:id="@+id/et_username"
            style="@style/TextStyle_14_black"
            android:gravity="right"
            android:hint="请输入姓名"
            android:background="@null"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:textColorHint="@color/text_999"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/div_line"/>
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TextStyle_14_black"
            android:text="公司名称"
            android:id="@+id/companyname"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_toRightOf="@+id/companyname"
            android:id="@+id/et_companyname"
            style="@style/TextStyle_14_black"
            android:gravity="right"
            android:singleLine="true"
            android:hint="请输入公司名称"
            android:background="@null"
            android:layout_width="match_parent"
            android:textColorHint="@color/text_999"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/div_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/zhiwu"
            style="@style/TextStyle_14_black"
            android:layout_centerVertical="true"
            android:text="职务" />

        <EditText
            android:id="@+id/et_zhiwu"
            style="@style/TextStyle_14_black"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/zhiwu"
            android:singleLine="true"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入职务"
            android:textColorHint="@color/text_999"

            />
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/div_line"/>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:background="@color/red"
        android:text="提交"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:layout_height="42dp" />

</LinearLayout>
