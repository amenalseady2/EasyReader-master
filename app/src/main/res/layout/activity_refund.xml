<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.BlackDiamond2010.hzs.ui.activity.lives.activity.LogisticsActivity">

    <include layout="@layout/top_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/goodsimg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/test" />

            <TextView
                android:id="@+id/goodsname"
                style="@style/TextStyle_14_black"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@+id/goodsimg"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="路演工具" />

            <TextView
                android:id="@+id/status"
                style="@style/TextStyle_14_999"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/goodsimg"
                android:ellipsize="end"

                android:maxLines="1"
                android:text="退款中" />



            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/price"
                style="@style/TextStyle_14_666"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/goodsimg"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/red"
                android:text="￥268" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/main_backgroud_color"/>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/colorWhite"
            android:divider="#ffffff"
            android:dividerHeight="0dp" />

    </LinearLayout>


</LinearLayout>
