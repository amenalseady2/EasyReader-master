<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.BlackDiamond2010.hzs.ui.activity.lives.activity.PaymentActivity">

    <include layout="@layout/top_view"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="85dp">
        <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="年度钻石会员"
        android:background="#ffffff"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:textColor="@color/red"
            android:text="328元" />

        <TextView
            android:layout_toLeftOf="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"

            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="需支付：" /></RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/main_backgroud_color"/>

    <RelativeLayout
        android:id="@+id/rl_weixin"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:background="#ffffff"
        android:layout_height="wrap_content">


        <TextView
            android:drawableLeft="@mipmap/vip_gmhy_weixin"
            android:text="微信支付"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:drawablePadding="10dp"
            style="@style/TextStyle_14_black" />

        <ImageView
            android:id="@+id/weixin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/choice_normal"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/div_line"/>

   <RelativeLayout
       android:id="@+id/rl_zhifubao"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:background="#ffffff"
    android:layout_height="wrap_content">


    <TextView
        android:drawableLeft="@mipmap/vip_gmhy_zhifubao"
        android:text="支付宝支付"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:drawablePadding="10dp"
        style="@style/TextStyle_14_black" />

    <ImageView
        android:id="@+id/zhifubo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/choice_normal"/>
</RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f3f3f3">

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/red"
            android:gravity="center"
            android:text="购买会员"
            android:textColor="#ffffff"
            android:textSize="14dp" />


    </RelativeLayout>





</LinearLayout>
